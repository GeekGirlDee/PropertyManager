@model PropertyManger.Areas.Dashboard.ViewModels.PropertyTypesListingModel

@if (Model != null && Model.PropertyTypes != null && Model.PropertyTypes.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var propertyType in Model.PropertyTypes)
            {
                <tr>
                    <td>
                        @propertyType.Name
                    </td>
                    <td>
                        @propertyType.Description
                    </td>
                    <td>
                        <button data-href="@Url.Action("Action", "PropertyTypes", new { ID = propertyType.ID})" type="button" class="data-btn btn btn-primary" data-toggle="modal" data-target="#actionModal"><i class="fas fa-pen mr-1"></i> Edit</button>
                        <button data-href="@Url.Action("Delete", "PropertyTypes", new { ID = propertyType.ID})" type="button" class="data-btn btn btn-danger" data-toggle="modal" data-target="#actionModal"><i class="fas fa-trash-alt mr-1"></i> Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
        Sorry! No records exist.
    </div>
}